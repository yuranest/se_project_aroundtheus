# : https://EditorConfig.org

# Root marker for the EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8                    # Use UTF-8 encoding for all files
indent_style = space               # Use spaces for indentation
indent_size = 2                    # Set indentation size to 2 spaces
end_of_line = lf                   # Use LF for line endings (Unix style)
trim_trailing_whitespace = true    # Remove trailing whitespace
insert_final_newline = true        # Ensure files end with a newline

# Rules for Markdown files
[*.md]
trim_trailing_whitespace = false   # Allow trailing whitespace (Markdown formatting)

# Rules for JSON files
[*.json]
indent_style = space               # Use spaces for indentation
indent_size = 2                    # Use 2 spaces for indentation

# Rules for JavaScript, CSS, and HTML files
[*.{js,css,html}]
indent_style = space               # Use spaces for indentation
indent_size = 2                    # Use 2 spaces for indentation
